			<input type="password" autocomplete="off" id="password" placeholder="plainTextPassword" name="password" /> <br> <br>
			<input type="text" autocomplete="off" name="" id="number" placeholder="Number"   name="number">  <br> <br>
			<input type="submit" value="REGISTER" id="button" />
			<a href="http://localhost:9999/login"></a>
		</form>
	</div>

